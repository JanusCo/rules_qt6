package(default_visibility = ["//visibility:public"])

load(":qt_toolchain.bzl", "qt_toolchain")

toolchain_type(name = "toolchain_type")
qt_toolchain(
    name = "qt_linux",
    moc_cmd = "$(location @qt_6.2.4_linux_desktop_gcc_64//:moc)",
    rcc_cmd = "$(location @qt_6.2.4_linux_desktop_gcc_64//:rcc)",
    uic_cmd = "$(location @qt_6.2.4_linux_desktop_gcc_64//:uic)",
    data = [
        "@qt_6.2.4_linux_desktop_gcc_64//:rcc",
        "@qt_6.2.4_linux_desktop_gcc_64//:uic",
        "@qt_6.2.4_linux_desktop_gcc_64//:moc",
    ],
)


qt_toolchain(
    name = "qt_windows",
    moc_cmd = "$(location @qt_6.4.0_windows_desktop_win64_msvc2019_64//:moc)",
    rcc_cmd = "$(location @qt_6.4.0_windows_desktop_win64_msvc2019_64//:rcc)",
    uic_cmd = "$(location @qt_6.4.0_windows_desktop_win64_msvc2019_64//:uic)",
    data = [
        "@qt_6.4.0_windows_desktop_win64_msvc2019_64//:rcc",
        "@qt_6.4.0_windows_desktop_win64_msvc2019_64//:uic",
        "@qt_6.4.0_windows_desktop_win64_msvc2019_64//:moc",
    ],
)


